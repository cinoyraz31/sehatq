<div class="section-form">
	<%= form_tag(@url_form, method: "post", 'data-remote': 'true', 'multipart': true, :authenticity_token => true) do %>
	<div class="content-section">
		<div class="content-with-annotation">
			<div class="col-lg-3 padding-side-xs-0">
				<div class="padding-vert-lg-4 padding-bottom-sm-4 padding-bottom-xs-4">
					<h6>Informasi Dasar</h6>
					<p class="margin-top-md-1 margin-bottom-sm-0 margin-bottom-xs-0 cgray2">Lengkapi form poli untuk rumah sakit, periksa kembali data yang dibutuhkan</p>
				</div>
			</div>
            <div class="col-lg-9 padding-side-xs-0">
				<div class="content-block">
                    <div class="field-added">
                        <% key = 0 %>
                        <% if @polies.present? %>
                            <% @polies.each do |poli| %>
                                <%= 
                                    render('polis/new_item', {
                                        object: poli,
                                        idx: key
                                    }) 
                                %>	
                                <% key += 1 %>
							<% end %>
                        <% else %>
                            <%= render('polis/new_item') %>
                        <% end %>
                        <div class="">
							<a href="javascript:void(0);" class="add-item"><i class="prm-plus"></i> Tambah</a>
						</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%= render("partial/submit", { url_back: polis_path }) %>
    <% end %>
</div>
