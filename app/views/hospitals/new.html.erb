<div class="section-form">
	<%= form_tag(@url_form, method: "post", 'data-remote': 'true', 'multipart': true, :authenticity_token => true) do %>
	<div class="content-section">
		<div class="content-with-annotation">
			<div class="col-lg-3 padding-side-xs-0">
				<div class="padding-vert-lg-4 padding-bottom-sm-4 padding-bottom-xs-4">
					<h6>Informasi Dasar</h6>
					<p class="margin-top-md-1 margin-bottom-sm-0 margin-bottom-xs-0 cgray2">Lengkapi form rumah sakit sesuai data kebutuhan </p>
				</div>
			</div>
			<div class="col-lg-9 padding-side-xs-0">
				<div class="content-block">
					<div class="content-input">
						<label for="" class="content-label">Nama Rumah Sakit</label>
						<%= 
							render('partial/json_field_item', {
								'field_name': :name,
								'model_name': 'hospital',
								'type': 'text',
								'object': @hospital,
								'errors': @hospital['errors'],
								'attributes': {
									'placeholder': 'ex: Siloam Kebun Jeruk'
								}
							}) 	
						%>
					</div>
                    <div class="content-input">
						<label for="" class="content-label">No. Telepon</label>
						<%= 
							render('partial/json_field_item', {
								'field_name': :phone,
								'model_name': 'hospital',
								'type': 'text',
								'object': @hospital,
								'errors': @hospital['errors'],
								'attributes': {
									'placeholder': 'ex: 089767552',
                                    'class': 'disblock fullwidth input-number'
								}
							}) 	
						%>
					</div>
                    <div class="content-input">
						<label for="" class="content-label">Alamat</label>
						<%= 
							render('partial/json_field_item', {
								'field_name': :address,
								'model_name': 'hospital',
								'type': 'textarea',
								'object': @hospital,
								'errors': @hospital['errors'],
							}) 	
						%>
					</div>
				</div>
			</div>
		</div>
	</div>
	<%= render("partial/submit", { url_back: hospitals_path }) %>
	<% end %>
</div>