<div class="section-form">
	<%= form_tag(@url_form, method: "post", 'data-remote': 'true', 'multipart': true, :authenticity_token => true) do %>
	<div class="content-section">
		<div class="content-with-annotation">
			<div class="col-lg-3 padding-side-xs-0">
				<div class="padding-vert-lg-4 padding-bottom-sm-4 padding-bottom-xs-4">
					<h6>Informasi Dasar</h6>
					<p class="margin-top-md-1 margin-bottom-sm-0 margin-bottom-xs-0 cgray2">Lengkapi form jadwal dokter sesuai dengan rumah sakitnya. </p>
				</div>
			</div>
            <div class="col-lg-9 padding-side-xs-0">
				<div class="content-block">
					<div class="content-input">
						<label for="" class="content-label">Nama Rumah Sakit</label>
                        <div class="select-group-wrapper">
						<%= 
							render('partial/json_field_item', {
								'field_name': :hospital_id,
								'model_name': 'examination_schedule',
                                'is_select': {
                                    empty: 'Pilih rumah sakit',
                                    options: @hospitals,
                                },
								'object': @examination_schedule,
								'errors': @examination_schedule['errors'],
                                'attributes': {
                                    class: 'disblock fullwidth ajax-change',
                                    'data-url': get_attribute_schedules_path,
                                    'data-use-current-value' => 'hospital_id',
                                    'data-wrapper-write-page' => '#roomID, #hospitalUserID'
                                }
							}) 	
						%>
                        </div>
					</div>
                    <div class="content-input">
						<label for="" class="content-label">Ruangan</label>
                        <div class="select-group-wrapper">
						<%= 
							render('partial/json_field_item', {
								'field_name': :room_id,
								'model_name': 'examination_schedule',
                                'is_select': {
                                    empty: 'Pilih Ruangan',
                                    options: @rooms,
                                },
								'object': @examination_schedule,
								'errors': @examination_schedule['errors'],
                                'attributes': {
                                    id: 'roomID',
                                }
							}) 	
						%>
                        </div>
					</div>
                    <div class="content-input">
						<label for="" class="content-label">Dokter & Poli</label>
                        <div class="select-group-wrapper">
						<%= 
							render('partial/json_field_item', {
								'field_name': :hospital_user_id,
								'model_name': 'examination_schedule',
                                'is_select': {
                                    empty: 'Pilih Dokter',
                                    options: @hospital_users,
                                },
								'object': @examination_schedule,
								'errors': @examination_schedule['errors'],
                                'attributes': {
                                    id: 'hospitalUserID',
                                }
							}) 	
						%>
                        </div>
					</div>
                </div>
            </div>
        </div>
        <div class="content-with-annotation">
			<div class="col-lg-3 padding-side-xs-0">
				<div class="padding-vert-lg-4 padding-bottom-sm-4 padding-bottom-xs-4">
					<h6>Informasi Dasar</h6>
					<p class="margin-top-md-1 margin-bottom-sm-0 margin-bottom-xs-0 cgray2">Lengkapi form jadwal. </p>
				</div>
			</div>
            <div class="col-lg-9 padding-side-xs-0">
				<div class="content-block">
					<div class="content-input">
						<label for="" class="content-label">Hari Penugasan</label>
                        <div class="select-group-wrapper">
						<%= 
							render('partial/json_field_item', {
								'field_name': :dayname,
								'model_name': 'examination_schedule',
                                'is_select': {
                                    empty: 'Pilih Hari',
                                    options: [
                                        ['Senin', 'monday'],
                                        ['Selasa', 'tuesday'],
                                        ['Rabu', 'wednesday'],
                                        ['Kamis', 'thursday'],
                                        ['Jumat', 'friday'],
                                        ['Sabtu', 'saturday'],
                                        ['Minggu', 'sunday'],
                                    ],
                                },
								'object': @examination_schedule,
								'errors': @examination_schedule['errors'],
							}) 	
						%>
                        </div>
					</div>
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="content-input">
                                <label for="" class="content-label">Jam Mulai</label>
                                <%= 
                                    render('partial/json_field_item', {
                                        'field_name': :time_start,
                                        'model_name': 'examination_schedule',
                                        'type': 'text',
                                        'object': @examination_schedule,
                                        'errors': @examination_schedule['errors'],
                                        'attributes': {
                                            class: 'disblock fullwidth timepicker',
                                        }
                                    }) 	
                                %>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="content-input">
                                <label for="" class="content-label">Jam Berakhir</label>
                                <%= 
                                    render('partial/json_field_item', {
                                        'field_name': :time_end,
                                        'model_name': 'examination_schedule',
                                        'type': 'text',
                                        'object': @examination_schedule,
                                        'errors': @examination_schedule['errors'],
                                        'attributes': {
                                            class: 'disblock fullwidth timepicker',
                                        }
                                    }) 	
                                %>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="content-input">
                                <label for="" class="content-label">Kuota</label>
                                <%= 
                                    render('partial/json_field_item', {
                                        'field_name': :quota,
                                        'model_name': 'examination_schedule',
                                        'type': 'text',
                                        'object': @examination_schedule,
                                        'errors': @examination_schedule['errors'],
                                        'attributes': {
                                            class: 'disblock fullwidth input-number',
                                        }
                                    }) 	
                                %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%= render("partial/submit", { url_back: schedules_path }) %>
    <% end %>
</div>